        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFavorito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDesfavorito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsFavorito)
            </td>
