@model IEnumerable<BodegasRuizApp.Models.Favorito>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaFavorito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDesfavorito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsFavorito)
            </th>
